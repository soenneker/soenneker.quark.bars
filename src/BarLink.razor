@using Soenneker.Quark.Anchors
@inherits Soenneker.Quark.Components.Element

<Anchor To="@To" @attributes="BuildAttributes()" >
    @ChildContent
</Anchor>

@code {

    [Parameter]
    public string? To { get; set; }

    [Parameter]
    public bool Active { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    protected override Dictionary<string, object> BuildAttributes()
    {
        Dictionary<string, object> attributes = base.BuildAttributes();

        var baseClass = "nav-link";
        if (Active)
            baseClass = $"{baseClass} active";
        if (Disabled)
            baseClass = $"{baseClass} disabled";

        AppendToClassAttr(attributes, baseClass);

        if (Disabled)
            attributes["aria-disabled"] = "true";

        return attributes;
    }

}