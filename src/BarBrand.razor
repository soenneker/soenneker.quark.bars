@using Soenneker.Extensions.String
@using Soenneker.Quark.Divs

@inherits Soenneker.Quark.Components.Element

<Div Class="navbar-brand" @attributes="BuildAttributes()">
    @ChildContent
</Div>

@code {
    [Parameter]
    public string? To { get; set; }

    protected override Dictionary<string, object> BuildAttributes()
    {
        Dictionary<string, object> attributes = base.BuildAttributes();

        if (To.HasContent())
        {
            attributes["href"] = To;

            AppendToClassAttr(attributes, "navbar-brand");
        }

        return attributes;
    }
}
