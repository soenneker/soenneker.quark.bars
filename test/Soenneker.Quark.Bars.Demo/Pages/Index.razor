@page "/"
@using Microsoft.Extensions.Logging

@inject ILogger<Index> Logger

<img src="https://user-images.githubusercontent.com/4441470/224455560-91ed3ee7-f510-4041-a8d2-3fc093025112.png" />
<h1>Soenneker.Quark.Bars demo</h1>
<p>This page demonstrates some of the common usages for the bars library.</p>
<br />

<hr />

<div>
    <h2>Basic Navigation Bar</h2>
    <Bar Color="@Color.Light">
        <BarBrand To="#">Navbar</BarBrand>
        <BarToggler Target="#navbarNav" />
        <BarCollapse Id="navbarNav">
            <BarNav>
                <BarItem>
                    <BarLink To="#" Active="true">Home</BarLink>
                </BarItem>
                <BarItem>
                    <BarLink To="#">Features</BarLink>
                </BarItem>
                <BarItem>
                    <BarLink To="#">Pricing</BarLink>
                </BarItem>
                <BarItem>
                    <BarLink To="#" Disabled="true">Disabled</BarLink>
                </BarItem>
            </BarNav>
        </BarCollapse>
    </Bar>
</div>

<hr />

<div>
    <h2>Dark Navigation Bar</h2>
    <Bar Color="@Color.Dark" Dark="true">
        <BarBrand To="#">Dark Navbar</BarBrand>
        <BarToggler Target="#navbarNav2" />
        <BarCollapse Id="navbarNav2">
            <BarNav>
                <BarItem>
                    <BarLink To="#" Active="true">Home</BarLink>
                </BarItem>
                <BarItem>
                    <BarLink To="#">About</BarLink>
                </BarItem>
                <BarItem>
                    <BarLink To="#">Contact</BarLink>
                </BarItem>
            </BarNav>
            <BarNav Right="true">
                <BarItem>
                    <BarLink To="#">Login</BarLink>
                </BarItem>
            </BarNav>
        </BarCollapse>
    </Bar>
</div>

<hr />

<div>
    <h2>Transparent Navigation Bar</h2>
    <Bar Color="@Color.Primary" Transparent="true">
        <BarBrand To="#">Transparent</BarBrand>
        <BarCollapse>
            <BarNav>
                <BarItem>
                    <BarLink To="#">Home</BarLink>
                </BarItem>
                <BarItem>
                    <BarLink To="#">Services</BarLink>
                </BarItem>
                <BarItem>
                    <BarLink To="#">Portfolio</BarLink>
                </BarItem>
            </BarNav>
        </BarCollapse>
    </Bar>
</div>

<hr />

<div>
    <h2>Fixed Top Navigation Bar</h2>
    <Bar Color="@Color.Success" Placement="@BarPlacement.Fixed">
        <BarBrand To="#">Fixed Top</BarBrand>
        <BarCollapse>
            <BarNav>
                <BarItem>
                    <BarLink To="#">Dashboard</BarLink>
                </BarItem>
                <BarItem>
                    <BarLink To="#">Reports</BarLink>
                </BarItem>
                <BarItem>
                    <BarLink To="#">Settings</BarLink>
                </BarItem>
            </BarNav>
        </BarCollapse>
    </Bar>
    <div style="height: 200px; background-color: #f8f9fa; margin-top: 60px; padding: 20px;">
        <p>Content below fixed navbar</p>
    </div>
</div>

<hr />

<div>
    <h2>Sticky Navigation Bar</h2>
    <Bar Color="@Color.Warning" Placement="@BarPlacement.Sticky">
        <BarBrand To="#">Sticky</BarBrand>
        <BarCollapse>
            <BarNav>
                <BarItem>
                    <BarLink To="#">Products</BarLink>
                </BarItem>
                <BarItem>
                    <BarLink To="#">Solutions</BarLink>
                </BarItem>
                <BarItem>
                    <BarLink To="#">Support</BarLink>
                </BarItem>
            </BarNav>
        </BarCollapse>
    </Bar>
    <div style="height: 200px; background-color: #e9ecef; padding: 20px;">
        <p>Content that scrolls with sticky navbar</p>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        Logger.LogInformation("Bars demo page initialized");
    }
}
